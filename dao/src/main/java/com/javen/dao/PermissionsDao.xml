<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.javen.dao.PermissionsDao">
	<resultMap id="permissionsMap" type="com.javen.model.Permissions">
		<id column="id" property="id" />
		<result column="permission" property="permission" jdbcType="VARCHAR" />
		<result column="description" property="description" jdbcType="VARCHAR" />
		<result column="available" property="available" jdbcType="VARCHAR" />
	</resultMap>

	<insert id="insert" parameterType="com.javen.model.Permissions">
		insert into sys_permissions(
		<trim suffixOverrides=",">
			<if test="permission!=null and permission!=''">
				permission,
			</if>
			<if test="description!=null and description!=''">
				description,
			</if>
			<if test="available!=null and available!=''">
				available,
			</if>
		</trim>
		) values (
		<trim suffixOverrides=",">
			<if test="permission!=null and permission!=''">
				#{permission},
			</if>
			<if test="description!=null and description!=''">
				#{description},
			</if>
			<if test="available!=null and available!=''">
				#{available},
			</if>
		</trim>
		)
	</insert>

	<delete id="delete" parameterType="java.lang.String">
		DELETE FROM sys_permissions
		WHERE id = #{id}
	</delete>

	<update id="update" parameterType="com.javen.model.Permissions">
		update sys_permissions
		<set>
			<if test="permission!=null and permission!=''">
				permission=#{permission},
			</if>
			<if test="description!=null and description!=''">
				description=#{description},
			</if>
			<if test="available!=null and available!=''">
				available=#{available},
			</if>
		</set>
		where id=#{id}
	</update>

	<select id="findById" parameterType="java.lang.String" resultType="com.javen.model.Permissions">
		SELECT id,permission,description,available
		FROM sys_permissions
		WHERE id = #{id};
	</select>

	<select id="findAllList"  resultType="com.javen.model.Permissions">
		SELECT id,permission,description,available
		FROM sys_permissions
	</select>
</mapper>